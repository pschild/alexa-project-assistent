{
    "type": "APL",
    "version": "1.0",
    "theme": "dark",
    "import": [],
    "resources": [
        {
            "description": "Colors dark to light",
            "colors": {
                "backgroundColor": "#343838"
            }
        }
    ],
    "styles": {},
    "layouts": {},
    "mainTemplate": {
        "parameters": [
            "payload"
        ],
        "items": [
            {
                "type": "Container",
                "width": "100vw",
                "height": "100vh",
                "item": [
                    {
                        "type": "Frame",
                        "width": "100vw",
                        "height": "100vh",
                        "backgroundColor": "@backgroundColor",
                        "position": "absolute"
                    },
                    {
                        "type": "Text",
                        "text": "${payload.data.title}",
                        "alignSelf": "center"
                    },
                    {
                        "type": "Image",
                        "width": "100%",
                        "height": "100%",
                        "paddingBottom": "70",
                        "source": "${payload.data.imageUrl}",
                        "scale": "best-fit"
                    }
                ]
            }
        ]
    }
}