{
    "type": "APL",
    "version": "1.0",
    "theme": "light",
    "import": [],
    "resources": [
        {
            "description": "Colors dark to light",
            "colors": {
                "backgroundColor": "#ececec"
            }
        }
    ],
    "styles": {},
    "layouts": {
        "Background": {
            "item": [
                {
                    "type": "Frame",
                    "when": "${!payload.data.backgroundImageUrl}",
                    "width": "100vw",
                    "height": "100vh",
                    "backgroundColor": "@backgroundColor",
                    "position": "absolute"
                },
                {
                    "type": "Image",
                    "when": "${payload.data.backgroundImageUrl}",
                    "width": "100vw",
                    "height": "100vh",
                    "source": "${payload.data.backgroundImageUrl}",
                    "scale": "best-fill",
                    "position": "absolute"
                }
            ]
        }
    },
    "mainTemplate": {
        "parameters": [
            "payload"
        ],
        "items": [
            {
                "type": "Container",
                "width": "100vw",
                "height": "100vh",
                "item": [
                    {
                        "type": "Background"
                    },
                    {
                        "type": "Frame",
                        "width": "50vw",
                        "height": "50vh",
                        "paddingLeft": "20",
                        "paddingTop": "20",
                        "paddingRight": "20",
                        "paddingBottom": "20",
                        "position": "absolute",
                        "item": [
                            {
                                "type": "Container",
                                "items": [
                                    {
                                        "type": "Text",
                                        "textAlign": "center",
                                        "text": "Sprint-Status"
                                    },
                                    {
                                        "type": "Text",
                                        "text": "Bugs: ${payload.data.q1.bugs}<br>Progress: ${payload.data.q1.progress}"
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "type": "Frame",
                        "width": "50vw",
                        "height": "50vh",
                        "paddingLeft": "20",
                        "paddingTop": "20",
                        "paddingRight": "20",
                        "paddingBottom": "20",
                        "position": "absolute",
                        "left": "50vw",
                        "item": [
                            {
                                "type": "Container",
                                "width": "100%",
                                "height": "100%",
                                "alignItems": "center",
                                "justifyContent": "start",
                                "item": [
                                    {
                                        "type": "Text",
                                        "text": "Burn-Down-Chart"
                                    },
                                    {
                                        "type": "Image",
                                        "width": "100%",
                                        "height": "100%",
                                        "paddingBottom": "45",
                                        "source": "${payload.data.q2.imageUrl}",
                                        "scale": "best-fit"
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "type": "Frame",
                        "width": "50vw",
                        "height": "50vh",
                        "paddingLeft": "20",
                        "paddingTop": "20",
                        "paddingRight": "20",
                        "paddingBottom": "20",
                        "position": "absolute",
                        "top": "50vh",
                        "item": [
                            {
                                "type": "Container",
                                "width": "100%",
                                "height": "100%",
                                "alignItems": "center",
                                "justifyContent": "start",
                                "item": [
                                    {
                                        "type": "Text",
                                        "textAlign": "center",
                                        "text": "Build-Status"
                                    },
                                    {
                                        "type": "Image",
                                        "width": "100%",
                                        "height": "100%",
                                        "paddingBottom": "45",
                                        "source": "${payload.data.q3.imageUrl}",
                                        "scale": "best-fit"
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "type": "Frame",
                        "width": "50vw",
                        "height": "50vh",
                        "paddingLeft": "20",
                        "paddingTop": "20",
                        "paddingRight": "20",
                        "paddingBottom": "20",
                        "position": "absolute",
                        "left": "50vw",
                        "top": "50vh",
                        "item": [
                            {
                                "type": "Container",
                                "width": "100%",
                                "height": "100%",
                                "justifyContent": "start",
                                "item": [
                                    {
                                        "type": "Text",
                                        "textAlign": "center",
                                        "text": "Qualitätsmaß"
                                    },
                                    {
                                        "type": "Image",
                                        "width": "100%",
                                        "height": "100%",
                                        "paddingBottom": "45",
                                        "source": "${payload.data.q4.imageUrl}",
                                        "scale": "best-fit"
                                    }
                                ]
                            }
                        ]
                    }
                ]
            }
        ]
    }
}